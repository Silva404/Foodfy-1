{% extends "../layout.njk" %}
{%block title%}
  <title> Gerenciar Receita</title>
{%endblock title%}

{%block links%}
  <link rel="stylesheet" href="/styles/admin/recipes/show.css">
  <link rel="stylesheet" href="/styles/admin/header.css">
  <script src="https://kit.fontawesome.com/bcd7f656b1.js" crossorigin="anonymous"></script>
{%endblock links%}

{% block content %}
  <div class="card">
    <section class="details">
      <div class="top">
        <h3>Receita:
          {{recipe.title}}</h3>

        <div class="edit">
          <a href="/admin/recipes/{{recipe.id}}/edit" class="button">
            Editar</a>
        </div>

      </div>
      <div class="recipe-img">
        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
      </div>

      <div class="recipe-info">
        <div>
          <h2>{{recipe.title}}</h2>
        </div>
        <div>
          <p>{{recipe.chef_name}}
            <p></div>
          </div>

          <div class="recipe-description">
            <div>
              <h3>Ingredientes</h3>
            </div>
            <ul>
              {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
              {% endfor %}
            </ul>
          </div>

          <div class="recipe-description">
            <div>
              <h3>Modo de preparo</h3>
            </div>
            <ul>
              {% for step in recipe.preparation %}
                <li>{{step}}</li>
              {% endfor %}
            </ul>
          </div>

          <div class="recipe-description">
            <h3>Informações extras</h3>
            <div>
              <p>{{recipe.information}}</p>
            </div>
          </div>

        </section>
      </div>
    {% endblock content %}