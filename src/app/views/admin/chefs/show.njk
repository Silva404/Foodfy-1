{% extends "../layout.njk" %}
{%block title%}
     <title>Foodfy Admin</title>
{%endblock title%}

{%block links%}
     <link rel="stylesheet" href="/styles/admin/chefs/show.css">
     <link rel="stylesheet" href="/styles/admin/header.css">
     <script src="https://kit.fontawesome.com/bcd7f656b1.js" crossorigin="anonymous"></script>
{%endblock links%}

{% block content %}
         <div class="edit">
               <a href="/admin/chefs/{{chef.id}}/edit">
                    Editar</a>
          </div>
     <section class="chef">
           
          <div class="card" id="{{chef.id}}">
               <div class="avatar">
                    <img src="{{chef.avatar_url}}">
               </div>

               <div class="recipeDetail">
                    <div class="author">
                         <p>{{chef.name}}</p>
                    </div>
                    <div class="total_recipes">
                         <p>
                              {% if chef.total_recipes > 1 %}{{chef.total_recipes}}
                                   receitas cadastradas{% endif %}
                              {% if chef.total_recipes == 0 %}Nenhuma receita cadastrada{% endif %}
                              {% if chef.total_recipes == 1 %}{{chef.total_recipes}}
                                   receita cadastrada{% endif %}
                         </p>
                    </div>
               </div>
          </div>
          {% include '../../recipes_list.njk' %}
 </section>
    
{% endblock content %}