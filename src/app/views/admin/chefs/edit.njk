{% extends "../layout.njk" %}
{%block title%}
    <title>
        Editar Perfil
        {{chef.name}}
    </title>
{%endblock title%}

{%block links%}
    <link rel="stylesheet" href="/styles/admin/chefs/edit.css">
    <link rel="stylesheet" href="/styles/admin/header.css">
    <script src="https://kit.fontawesome.com/bcd7f656b1.js" crossorigin="anonymous"></script>
{%endblock links%}

{%block content%}

    <div class="forms">

        <div class="top">
            <h3>Editando Chef:
                {{chef.name}}</h3>
            <div class="edit-buttons">
                <button type='submit' form='form-delete' class='delete'>Deletar</button>
                <button type='submit' form='form-edit' class='save'>Salvar</button>
            </div>
        </div>
        <form id='form-edit' method='POST' action='/admin/chefs/?_method=PUT'>

            <section class="details">

                <div class="item">
                    <div>Nome do chef</div>
                    <div><input type="text" name="name" placeholder="Digite seu nome" value="{{chef.name}}"></div>
                </div>

                <div class="item">
                    <div class="atual">
                        <input type="text" disabled="disabled" value="vai entrar imagem">
                    </div>
                    <div id="photos-upload">
                        <input type="file" name="photos" multiple="multiple" id="photos-input" accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
                        <p>Selecione um novo Avatar</p>
                    </div>
                </div>

                <input type="hidden" name='id' value="{{chef.id}}">
            </form>
        </section>
        <form id='form-delete' action="/admin/chefs?_method=DELETE" method="post">
            <input type="hidden" name="id" value='{{chef.id}}'>
            {%include './confirm.njk'%}
        </form>

    </div>
    <script src="/scripts/admin-features.js"></script>
{% endblock %}