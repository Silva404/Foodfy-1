{% extends "../layout.njk" %}
{%block title%}
    <title>Novo Chef</title>
{%endblock title%}

{%block links%}
    <link rel="stylesheet" href="/styles/admin/chefs/create.css">
    <link rel="stylesheet" href="/styles/admin/header.css">
    <script src="https://kit.fontawesome.com/bcd7f656b1.js" crossorigin="anonymous"></script>
{%endblock links%}

{% block content %}
    <form class="card" method="POST" action="/admin/chefs">
        <section class="details">

            <div class="top">
                <h2>Novo chef</h2>
                <button type="submit">Salvar</button>
            </div>

             <div class="item">
                <div>Nome do chef</div>
                <div><input type="text" name="name" placeholder="Digite o nome do chef" value="{{chef.name}}"></div>
            </div>

            <div class="item">
                <div id="photos-upload">
                    <input type="file" name="photos" multiple="multiple" id="photos-input" accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
                    <p>Selecione um Avatar</p>
                </div>
            </div>

        </section>
    </form>
{% endblock content %}